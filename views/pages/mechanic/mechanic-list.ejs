<%- include('../../fragments/header.ejs') %>
    <main>
      <h2>Lista mechaników</h2>
      <table class="table-list">
        <thead>
          <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Data urodzenia</th>
            <th>Akcje</th>
          </tr>
        </thead>
        <tbody>
        <% for (let mech of mechs) { %>
          <tr>
            <td><%= mech.firstName %></td>
            <td><%= mech.lastName %></td>
            <td><%= mech.birthDate.toISOString().split('T')[0] %></td>
            <td>
              <ul class="list-actions">
                <li><a href="/mechanics/details/<%=mech._id%>" class="list-actions-button-details">Szczegóły</a></li>
                <li><a href="/mechanics/edit/<%=mech._id%>" class="list-actions-button-edit">Edytuj</a></li>
                <li><a href="/mechanics/delete/<%=mech._id%>" class="list-actions-button-delete">Usuń</a></li>
              </ul>
            </td>
          </tr>
        <% } %>
        </tbody>
      </table>
      <p><a href="/mechanics/add" class="button-add">Dodaj nowego mechanika</a></p>
    </main>
<%- include('../../fragments/footer.ejs') %>